pipeline {
    agent { docker { image 'kmaharwal1/python-pytest:latest' } }

    stages {
        stage('Run app') {
            steps {
                dir('python-simple-app') {
                    sh 'python app.py'
                }
            }
        }

        stage('Run tests') {
            steps {
                dir('python-simple-app') {
                    sh 'pytest --maxfail=1 --disable-warnings -q'
                }
            }
        }
    }
}
